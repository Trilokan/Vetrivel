<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hr_appointment_opt_tree" model="ir.ui.view">
        <field name="name">hr.appointment.opt.tree</field>
        <field name="model">hr.appointment</field>
        <field name="arch" type="xml">
            <tree string="OPT Appointment">
                <field name="date"/>
                <field name="person_id"/>
                <field name="appointment_type" invisble="1"/>
                <field name="appointment_for"/>
                <field name="reason"/>
                <field name="comment"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hr_appointment_opt_form" model="ir.ui.view">
        <field name="name">hr.appointment.opt.form</field>
        <field name="model">hr.appointment</field>
        <field name="arch" type="xml">
            <form string="OPT Appointment">
                <sheet>
                    <div id="s_header">
                        <h1>OPT Appointment</h1>
                    </div>
                    <div id="p_header">
                        <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    </div>
                    <group col="4">
                        <field name="date"/>
                        <field name="person_id" string="Doctor"/>
                        <field name="appointment_type" invisble="1"/>
                        <field name="appointment_for" string="Patient"/>
                        <field name="reason"/>
                    </group>
                    <field name="comment" placeholder="Comment..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_appointment_opt_calendar" model="ir.ui.view">
        <field name="name">hr.appointment.opt.calendar</field>
        <field name="model">hr.appointment</field>
        <field name="arch" type="xml">
            <calendar string="OPT Appointment"
                      color="person_id"
                      date_start="date"
                      mode="month"
                      quick_add="False">
                <field name="person_id"/>
                <field name="appointment_for"/>
                <field name="reason"/>
            </calendar>
        </field>
    </record>


    <!-- Action -->
    <record id="action_hr_appointment_opt" model="ir.actions.act_window">
        <field name="name">OPT Appointment</field>
        <field name="res_model">hr.appointment</field>
        <field name="view_type">form</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>

</odoo>
