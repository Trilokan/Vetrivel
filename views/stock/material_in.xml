<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_material_in_tree" model="ir.ui.view">
        <field name="name">material.in.tree</field>
        <field name="model">material.in</field>
        <field name="arch" type="xml">
            <tree string="Material Received" create="false" edit="false" delete="false">
                <field name="date"/>
                <field name="name"/>
                <field name="person_id"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_material_in_form" model="ir.ui.view">
        <field name="name">material.in.form</field>
        <field name="model">material.in</field>
        <field name="arch" type="xml">
            <form string="Material Received" create="false" edit="true" delete="false">
                <sheet>
                    <div id="s_header">
                        <h1>Material Received</h1>
                    </div>
                    <div id="p_header">
                        <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    </div>
                    <h2><field name="name"/></h2>
                    <group col="4">
                        <field name="date" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="received_by"/>
                    </group>
                    <field name="in_detail" attrs="{'readonly': [('progress', '!=', 'draft')]}">
                        <tree editable="bottom" create="false" delete="false">
                            <field name="name" invisible="1"/>
                            <field name="id" invisible="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="description" readonly="1"/>
                            <field name="uom_id" readonly="1"/>
                            <field name="order_quantity" readonly="1"/>
                            <field name="previous_in_quantity" readonly="1"/>
                            <field name="in_quantity" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                            <field name="material_id" invisible="1"/>
                            <field name="progress" invisible="1"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="trigger_in" string="Received" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                        <button name="trigger_generate_invoice" string="Generate Invoice" type="object"
                                attrs="{'invisible': [('progress', '!=', 'received')]}"/>
                        <button name="trigger_cancel" string="Cancel" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                    </footer>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_material_in" model="ir.actions.act_window">
        <field name="name">Material Received</field>
        <field name="res_model">material.in</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>