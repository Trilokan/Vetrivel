<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_material_transact_out_tree" model="ir.ui.view">
        <field name="name">material.transact.out.tree</field>
        <field name="model">material.transact</field>
        <field name="arch" type="xml">
            <tree string="Material Delivery">
                <field name="date"/>
                <field name="name"/>
                <field name="order_id"/>
                <field name="transact_by"/>
                <field name="transact_on"/>
                <field name="transact_type"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_material_transact_out_form" model="ir.ui.view">
        <field name="name">material.transact.out.form</field>
        <field name="model">material.transact</field>
        <field name="arch" type="xml">
            <form string="Material Delivery">
                <sheet>
                    <div id="s_header">
                        <h1>Material Delivery</h1>
                    </div>
                    <div id="p_header">
                        <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    </div>
                    <h2><field name="name"/></h2>
                    <group col="4">
                        <field name="date" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="order_id" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="transact_by" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="transact_on" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="transact_type" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                    </group>
                    <field name="transact_detail" attrs="{'readonly': [('progress', 'in', ['approved', 'cancel'])]}">
                        <tree editable="bottom">
                            <field name="name" invisible="1"/>
                            <field name="id" invisible="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="description" readonly="1"/>
                            <field name="uom_id" readonly="1"/>
                            <field name="order_quantity" readonly="1"/>
                            <field name="previous_quantity" readonly="1"/>
                            <field name="quantity" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                            <field name="material_id" invisible="1"/>
                            <field name="progress" invisible="1"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="trigger_stock_moved" string="Stock Move" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                        <button name="trigger_cancel" string="Cancel" type="object"
                                attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                        <button name="trigger_generate_invoice" string="Generate Invoice" type="object"
                                attrs="{'invisible': [('progress', '!=', 'stock_moved')]}"/>
                    </footer>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_material_transact_out" model="ir.actions.act_window">
        <field name="name">Material Delivery</field>
        <field name="res_model">material.transact</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('transact_type', '=', 'out')]</field>
        <field name="view_id" ref="view_material_transact_out_tree"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_material_transact_out_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_material_transact_out_form" />
        <field name="act_window_id" ref="action_material_transact_out"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_material_transact_out_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_material_transact_out_tree"/>
        <field name="act_window_id" ref="action_material_transact_out"/>
    </record>


</odoo>