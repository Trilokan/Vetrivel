<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_arc_reconcile_tree" model="ir.ui.view">
        <field name="name">arc.reconcile.tree</field>
        <field name="model">arc.reconcile</field>
        <field name="arch" type="xml">
            <tree string="Account Reconcile">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_arc_reconcile_form" model="ir.ui.view">
        <field name="name">arc.reconcile.form</field>
        <field name="model">arc.reconcile</field>
        <field name="arch" type="xml">
            <form string="Account Reconcile">
                <sheet>
                    <div id="s_header">
                        <h1>Account Reconcile</h1>
                    </div>
                    <h2><field name="name"/></h2>
                    <group>
                        <field name="full_reconcile_ids" readonly="1">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="name"/>
                                <field name="person_id"/>
                                <field name="invoice_id"/>
                                <field name="description"/>
                                <field name="credit"/>
                                <field name="debit"/>
                                <field name="full_reconcile_id" invisible="1"/>
                                <field name="part_reconcile_id" invisible="1"/>
                                <field name="journal_type_id" invisible="1"/>
                            </tree>
                        </field>
                        <field name="part_reconcile_ids" readonly="1">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="name"/>
                                <field name="person_id"/>
                                <field name="invoice_id"/>
                                <field name="description"/>
                                <field name="credit"/>
                                <field name="debit"/>
                                <field name="full_reconcile_id" invisible="1"/>
                                <field name="part_reconcile_id" invisible="1"/>
                                <field name="journal_type_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_arc_reconcile" model="ir.actions.act_window">
        <field name="name">Account Reconcile</field>
        <field name="res_model">arc.reconcile</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
